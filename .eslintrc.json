{
  "extends": ["eslint:recommended", "next/core-web-vitals", "plugin:import/recommended"],
  "plugins": ["simple-import-sort"],
  "rules": {
    "prefer-const": 2,
    "simple-import-sort/imports": [
      2,
      {
        "groups": [
          ["^\\u0000"],
          ["^@?\\w"],
          ["^\\.\\."],
          ["^\\.\\./core"],
          ["^\\.\\./pages"],
          ["^\\.\\./components"],
          ["^\\."]
        ]
      }
    ],
    "simple-import-sort/exports": 2
  }
}
